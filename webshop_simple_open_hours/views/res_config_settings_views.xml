<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">Website settings Open Hours</field>
        <field name="model">website.config.settings</field>
        <field name="inherit_id" ref="website.view_website_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='advanced']" position="after">
                <group string="Open Hours" name="openhours" groups="base.group_no_one">
                    <label for="openhours_close" string="Open"/>
                    <div>
                        <div>
                            <field name="openhours_open" widget="float_time"/>
                            <label for="openhours_open"/>
                        </div>
                    </div>
                    <label for="openhours_close" string="Close"/>
                    <div>
                        <div>
                            <field name="openhours_close" widget="float_time"/>
                            <label for="openhours_close"/>
                        </div>
                    </div>
                </group>
            </xpath>
        </field>
    </record>
</odoo>