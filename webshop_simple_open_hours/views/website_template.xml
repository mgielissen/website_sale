<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- /shop/simple/openhours page -->
    <template id="open_hours" name="Open Hours">
        <t t-call="website.layout">
            <t t-set="additional_title">Open Hours</t>
            <div id="wrap" class="js_sale">
                <div class="oe_structure"/>
                <div class="container oe_website_sale">
                    <div class="row" style="margin: 20px; text-align: center; line-height: 1.4rem; font-family: inherit;">
                        <h4>
                            The web shop is closed for now and we're no longer taking orders.
                            <br/>Our web shop accepts orders:
                            <ul style="list-style-type: none;">
                                <li>For the day: until <span t-esc="openhours_close" /></li>
                                <li>For next day: after <span t-esc="openhours_open" /></li>
                            </ul>
                        </h4>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>