<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- add birthday dd/mm to detail form -->
    <template id="birthday_ddmm" inherit_id="website_portal.details">
        <xpath expr="//div[contains(@t-attf-class,'phone')]" position="after">
            <div t-attf-class="form-group #{error.get('bday') and error.get('bmonth') and 'has-error' or ''} col-lg-6">
<script>
<![CDATA[
$(document).ready(function(e) {

function daysInMonth(month) {
  return new Date(2000, month, 0).getDate();
}

$('#bmonth').change(function() {

  if ($('#bmonth').val().length > 0) {
    $('#bday').prop('disabled', false);
    $('#bday').find('option').remove();

    var daysInSelectedMonth = daysInMonth($('#bmonth').val());

    for (var i = 1; i <= daysInSelectedMonth; i++) {
      $('#bday').append($("<option></option>").attr("value", i).text(i));
    }

  } else {
    $('#bday').prop('disabled', true);
  }
});

});
]]>
</script>
                <label class="control-label" for="birthday">Birthday</label>
                <t t-if="partner.bday and partner.bmonth">
                    <input type="text" class="form-control" t-attf-value="{{partner.bday}}/{{partner.bmonth}}"  disabled="1" />
                </t>
                <t t-else="1">
                    <select id="bmonth" name="bmonth" class="form-control" required="1">
                        <option value="">Select Month</option>
                        <option value="1">January</option>
                        <option value="2">February</option>
                        <option value="3">March</option>
                        <option value="4">April</option>
                        <option value="5">May</option>
                        <option value="6">June</option>
                        <option value="7">July</option>
                        <option value="8">August</option>
                        <option value="9">September</option>
                        <option value="10">October</option>
                        <option value="11">Novermber</option>
                        <option value="12">December</option>
                    </select>
                    <select id="bday" name="bday" class="form-control" required="1" disabled="1">
                        <option value="">Select Day</option>
                    </select>
                </t>
            </div>
        </xpath>
    </template>

    <!-- -->
    <template id="birthday_ddmm_sol" inherit_id="website_sale.cart_lines">
        <xpath expr="//tbody/t" position="after">
            <t t-set="company" t-value="website_sale_order.company_id"/>
            <tr style="background-color: rgba(255, 192, 203, 0.3);">
                <td colspan="2" t-if="not company.birthday_promotion_product_id"></td>
                <td align="center" t-if="company.birthday_promotion_product_id.id">
                    <span t-field="company.birthday_promotion_product_id.image_small"
                          t-options="{'widget': 'image', 'class': 'img-rounded'}"/>
                </td>
                <td t-if="company.birthday_promotion_product_id">
                    <div>
                        <a t-attf-href="/shop/product/#{ slug(company.birthday_promotion_product_id) }">
                            <strong t-esc="company.birthday_promotion_product_id.with_context(display_default_code=False).display_name"/>
                        </a>
                    </div>
                    <div class="text-muted">
                        <span>
                            Free Birthday Gift
                        </span>
                        <br/>
                    </div>
                    <!--a href='#' class='js_delete_product no-decoration'>
                        <small>
                            <i class='fa fa-trash-o'></i>
                            Remove
                        </small>
                    </a-->
                </td>
                <td class="text-center" id="td-qty">
                    <div class="input-group oe_website_spinner">
                        <a t-attf-href="#" class="mb8 input-group-addon js_add_cart_json" data-no-instant="">
                            <i class="fa fa-minus"></i>
                        </a>
                        <input type="text" class="js_quantity form-control quantity" data-line-id="-1"
                               t-att-data-product-id="company.birthday_promotion_product_id.id"
                               value="1" disabled="1"/>
                        <a t-attf-href="#" class="mb8 input-group-addon float_left js_add_cart_json" data-no-instant="">
                            <i class="fa fa-plus"></i>
                        </a>
                    </div>
                </td>
                <td class="text-center" id="td-price" name="price">
                    <del t-attf-class="#{'text-danger mr8'}" style="white-space: nowrap;"
                         t-esc="compute_currency(0)"
                         t-options="{'widget': 'monetary', 'display_currency': website.get_current_pricelist().currency_id, 'from_currency': website.currency_id}"/>
                </td>
            </tr>
        </xpath>
    </template>
</odoo>