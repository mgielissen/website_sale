<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_company_form_label_report_logo" model="ir.ui.view">
            <field name="name">view_company_form_label_report_logo</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Label Report" name="label_report">
                        <group>
                            <field name="label_report_logo" widget="image"  class="oe_avatar"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>